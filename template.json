{
  "name": "Base",
  "replacements": [
    {
      "name": "name",
      "description": "App Name",
      "pattern": ".+",
      "needle": "AppName",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "description",
      "description": "App Description",
      "pattern": ".+",
      "needle": "AppDescription",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "theme",
      "description": "App Color",
      "pattern": "(#([0-9]|[A-F]|[a-f]){6})",
      "needle": "#FFFFFF",
      "haystacks": [
        "index.html",
        "resources/manifest.json",
        "resources/offline.html",
        "stylesheets/app.css"
      ]
    },
    {
      "name": "layout",
      "description": "App Layout",
      "pattern": ".+",
      "needle": "<!--Your App Body-->",
      "haystacks": [
        "index.html"
      ]
    },
    {
      "name": "load",
      "description": "App Load Code",
      "pattern": ".+",
      "needle": "// Your Load Code",
      "haystacks": [
        "scripts/frontend/app.js"
      ]
    },
    {
      "name": "code",
      "description": "App Code",
      "pattern": ".+",
      "needle": "// Your App Code",
      "haystacks": [
        "scripts/frontend/app.js"
      ]
    },
    {
      "name": "stylesheet",
      "description": "App Style",
      "pattern": ".+",
      "needle": "/* Your App Style */",
      "haystacks": [
        "stylesheets/app.css"
      ]
    }
  ]
}